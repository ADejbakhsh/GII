{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "graph.txt",
  "patterns": [
    {
      "include": "#constant"
    },
    {
      "include": "#markup"
    },
    {
      "include": "#graph_line"
    }
  ],
  "repository": {
    "graph_line": {
      "begin": "^",
      "end": "$",
      "patterns": [
        {
          "include": "#strings"
        },
        {
          "include": "#comment"
        },
        {
          "include": "#graph_end"
        },
        {
          "include": "#GRAPH_EVAL"
        },
        {
          "include": "#entity"
        }
      ]
    },
    "GRAPH_EVAL": {
      "begin": "(^GRAPH_EVAL)(:([A-Za-z_]*)\\.?([A-Za-z_]*)?\\.?([A-Za-z_]*)?)?",
      "beginCaptures": {
        "1": {
          "name": "entity.name.function.GII"
        },
        "3": {
          "name": "entity.name.class"
        },
        "4": {
          "name": "entity.name.tag"
        },
        "5": {
          "name": "entity.name.tag"
        }
      },
      "end": "$",
      "patterns": [
        {
          "include": "#strings"
        },
        {
          "include": "#boolean"
        }
      ]
    },
    "graph_end": {
      "patterns": [
        {
          "name": "keyword.control.gii",
          "match": "^\\b(GRAPH|END)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.GII",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.GII",
          "match": "\\\\."
        }
      ]
    },
    "comment": {
      "patterns": [
        {
          "name": "comment.block.GII",
          "match": "#.*$"
        }
      ]
    },
    "entity": {
      "patterns": [
        {
          "name": "entity.name.function.GII",
          "match": "GRAPH_[A-Z-a-z_]*"
        }
      ]
    },
    "constant": {
      "name": "constant.GII",
      "patterns": [
        {
          "name": "constant.language.GII",
          "match": "^INDIC_[a-zA-Z]{0,}"
        }
      ]
    },
    "markup": {
      "name": "markup.heading.gii",
      "patterns": [
        {
          "name": "markup.heading.gii",
          "match": "^INDIC:"
        }
      ]
    },
    "boolean": {
      "name": "support.constant",
      "match": "\\b(true|false)\\b"
    }
  },
  "scopeName": "source.txt"
}